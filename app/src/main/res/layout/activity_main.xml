<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".MainActivity"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/adddoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:src="@drawable/adduser" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adddoctor"
                    android:layout_centerHorizontal="true"
                    android:text="Add Doctor"
                    android:textColor="#000" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/doctorlist"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:src="@drawable/doctorlist" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doctorlist"
                    android:layout_centerHorizontal="true"
                    android:text="Show Doctors"
                    android:textColor="#000" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/updatedoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/update" />

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/updatedoctor"
                    android:layout_centerHorizontal="true"
                    android:text="Update Doctor Profile"
                    android:textColor="#000" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/addmedicalhistory"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:src="@drawable/addreport" />

                <TextView
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addmedicalhistory"
                    android:layout_centerHorizontal="true"
                    android:text="Add medical History"
                    android:textColor="#000" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="20dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/viewmedicalhistory"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/medicalhistory" />

                <TextView
                    android:layout_width="98dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewmedicalhistory"
                    android:layout_centerHorizontal="true"
                    android:text="View Medical History"
                    android:textColor="#000" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>



</LinearLayout>